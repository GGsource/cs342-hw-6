<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<VBox
    xmlns:fx="http://javafx.com/fxml/1"
    styleClass="vbox"
    fx:id = "introRoot"
    alignment="center"
    fx:controller="CoffeeController"
    >
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    <ImageView fx:id="boxImage" fitWidth = "200" preserveRatio = "true" >    
        <image>
            <Image url="images/ace.png" backgroundLoading = "true" />
        </image>
    </ImageView>
    <Label fx:id = "introLabel" text = "Welcome to Coffee Shop 342!" wrapText = "true" textAlignment = "CENTER" />
    <Button fx:id = "startOrderButton" text = "Start Order" onAction = "#startOrder" />
</VBox>